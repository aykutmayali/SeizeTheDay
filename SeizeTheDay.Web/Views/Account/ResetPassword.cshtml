@model SeizeTheDay.DataDomain.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container main-content no-padding">

        <div class="reg-form container">
            <nav class="ipsBreadcrumb ipsBreadcrumb_1 ipsFaded_withHover">
                <ul data-role="breadcrumbList">
                    <li>
                        <a title="Home" href="/Home/Index">
                            <span><i class="fa fa-home"></i> Home <i class="fa fa-angle-right"></i></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span>Reset Password</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="col-md-7 reg-form-inner">
               
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <p>
                        <label>Email:</label>
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Enter your Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </p>

                    <p>
                        <label>Password:</label>
                        @Html.TextBoxFor(model => model.Password, new { placeholder = "Enter your RePassWord", type = "password" })
                    </p>

                    <p>
                        <label>RePassword:</label>
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { placeholder = "Enter your RePassWord", type = "password" })
                    </p>
                    <p class="submit">
                        <button type="submit" class="button-green button-small center-block"> <i class="fa fa-sign-in"></i> Reset Password</button>
                    </p>
                }
            </div>
            <nav class="ipsBreadcrumb ipsBreadcrumb_1 ipsFaded_withHover">
                <ul data-role="breadcrumbList">
                    <li>
                        <a title="Home" href="/Home/Index">
                            <span><i class="fa fa-home"></i> Home <i class="fa fa-angle-right"></i></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span>Reset Password</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
