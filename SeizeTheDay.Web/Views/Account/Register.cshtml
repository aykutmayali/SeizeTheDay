@using SeizeTheDay.DataDomain.ViewModels
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container main-content no-padding">
    
    <div class="reg-form container">
        <nav class="ipsBreadcrumb ipsBreadcrumb_1 ipsFaded_withHover">
            <ul data-role="breadcrumbList">
                <li>
                    <a title="Home" href="/Home/Index">
                        <span><i class="fa fa-home"></i> Home <i class="fa fa-angle-right"></i></span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span>Register</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="col-md-7 reg-form-inner">
            <div class="heading">
                <h3>JOIN Seize The Day TODAY FOR free!</h3>
                <div class="clear"></div>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <p>
                    <label>Name:</label>
                    @Html.TextBoxFor(model => model.Name, new { placeholder = "Enter your Name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label>SurName:</label>
                    @Html.TextBoxFor(model => model.SurName, new { placeholder = "Enter your SurName" })
                    @Html.ValidationMessageFor(m => m.SurName, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label>Username:</label>
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Enter your UserName" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </p>
                <p>
                    <label>Email:</label>
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Enter your Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </p>

                <p>
                    <label>Password:</label>
                    @Html.TextBoxFor(model => model.Password, new { placeholder = "Enter your PassWord", type = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </p>

                <p>
                    <label>RePassword:</label>
                    @Html.TextBoxFor(model => model.RePassword, new { placeholder = "Enter your RePassWord", type = "password" })
                    @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                </p>

                <p class="checkbox-reg">
                    <label>
                        @Html.CheckBoxFor(model => model.Conditions) <span>
                            I certify that I'm over 18 and I agree to the
                            <a href="#" target="_blank">Terms &amp; Conditions!</a>
                        </span>
                    </label>
                </p>
                <p class="submit">
                    <button type="submit" class="button-green button-small center-block"> <i class="fa fa-sign-in"></i> Sign up today!</button>
                </p>
            }
        </div>
        <nav class="ipsBreadcrumb ipsBreadcrumb_1 ipsFaded_withHover">
            <ul data-role="breadcrumbList">
                <li>
                    <a title="Home" href="/Home/Index">
                        <span><i class="fa fa-home"></i> Home <i class="fa fa-angle-right"></i></span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span>Register</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
